mount -t sysfs sysfs /sys
mount -t devtmpfs devtmpfs /dev
printf "Listo\n"
printf "Creando nodos de dispositivos..."
busybox mdev -s
printf "Listo\n"
printf "Iniciando shell...\n"
/bin/sh
